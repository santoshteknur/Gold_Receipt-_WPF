<Window x:Class="PrintableFormApp.PrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Preview" Height="600" Width="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <ContentControl x:Name="PreviewContent" />
        </ScrollViewer>
        <Button Content="Print" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="100" Click="PrintButton_Click"/>
    </Grid>
</Window>